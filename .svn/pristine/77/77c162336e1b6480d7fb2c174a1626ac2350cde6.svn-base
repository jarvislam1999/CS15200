/* lab2.h: a header file defining integer type synonyms, 
 * type "struct rgb", and some common color constants
 */

typedef unsigned char byte;
typedef unsigned int  uint;

struct rgb {
  byte r;
  byte g;
  byte b;
};

const struct rgb BLACK = {0,0,0};
const struct rgb GRAY  = {128,128,128};
const struct rgb WHITE = {255,255,255};
const struct rgb RED   = {255,0,0};
const struct rgb GREEN = {0,255,0};
const struct rgb BLUE  = {0,0,255};
